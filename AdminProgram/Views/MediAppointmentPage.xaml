<Page x:Class="AdminProgram.Views.MediAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminProgram.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      DataContext="{Binding MAVM, Source={StaticResource ViewModelLocator}}"
      Title="MediAppointmentPage">
    <Page.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </Page.Resources>
<!--대기/예약 관리 페이지-->
    <Grid>
        <Grid Margin="60,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!--상단바-->
            <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="#FFC500FF">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>

                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>

                <DatePicker x:Name="datePicker" Grid.Column="0" SelectedDateChanged="SelectedDate" VerticalAlignment="Center"/>
                <Label Content="진료과: " Grid.Column="1" VerticalAlignment="Center" FontSize="18"/>
                <TextBlock Text="내과" Grid.Column="2" VerticalAlignment="Center" FontSize="18"/>
                <Label Content="의사이름: " Grid.Column="3" VerticalAlignment="Center" FontSize="18"/>
                <TextBlock Text="나현정" Grid.Column="4" VerticalAlignment="Center" FontSize="18"/>

                <Button Content="동기화" Grid.Column="7" 
                        Command ="{Binding ReservationUpdateBtn}" Style="{StaticResource RadiusBtn}"/>
                <Button Content="등록" Grid.Column="9" Click="AddAppointmentBtn"
                        Style="{StaticResource RadiusBtn}"/>
            </Grid>

            <!--방문 대기 환자-->
            <Label Content="방문 대기 환자 리스트" Grid.Row="1" Grid.Column="0" 
               FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
            <DataGrid x:Name="waitingGrid" Grid.Row="2" Grid.Column="0" Background="#FFD2CFCF"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                  ItemsSource="{Binding Path=WModels, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"
                      SelectedItem="{Binding SelectedItem2}" IsSynchronizedWithCurrentItem="True">
                <DataGrid.Columns>
                    <!--나머지 정보는 상세정보 페이지에서만 볼 수 있도록-->
                    <DataGridTextColumn Header="이름" Binding="{Binding PatientName}"/>
                    <DataGridTextColumn Header="대기 등록 시간" Binding="{Binding RequestToWait}"/>
                    <DataGridTextColumn Width="*" Header="증상 설명" Binding="{Binding Symptom}"/>
                </DataGrid.Columns>
                <!--한 행을 더블클릭 하면 새 창을 띄우기 위한 코드-->
                <DataGrid.ItemContainerStyle>
                    <Style TargetType="DataGridRow">
                        <!--마우스 이벤트 처리-->
                        <EventSetter Event="MouseDoubleClick" Handler="Waiting_Row_DoubleClick"/>
                    </Style>
                </DataGrid.ItemContainerStyle>
                <DataGrid.InputBindings>
                    <!--이벤트 발생 시 데이터 바인딩-->
                    <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding WaitingListDoubleClickCommand}"
                              CommandParameter="{Binding CollectionView2}"/>
                </DataGrid.InputBindings>
            </DataGrid>

            <!--예약 환자-->
            <Label Content="예약 환자 리스트" Grid.Row="1" Grid.Column="2" 
               FontWeight="Bold" FontSize="20" VerticalAlignment="Center" />
            <DataGrid x:Name="reservationGrid" Grid.Row="2" Grid.Column="2" Background="#FFD2CFCF"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                  ItemsSource="{Binding Path=RModels, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" 
                  SelectedItem="{Binding SelectedItem}" IsSynchronizedWithCurrentItem="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="환자 이름" MinWidth="50" Binding="{Binding PatientName}"/>
                    <DataGridTextColumn Header="예약 일시" MinWidth="100" Binding="{Binding ReservationDT}"/>
                    <DataGridTextColumn Header="증상 설명" MinWidth="200" Binding="{Binding Symptom}"/>
                    <DataGridTextColumn Header="담당 의사" Width="*" Binding="{Binding Doctor}"/>
                </DataGrid.Columns>
                <DataGrid.ItemContainerStyle>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                    </Style>
                </DataGrid.ItemContainerStyle>
                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding ReservationListDoubleClickCommand}"
                              CommandParameter="{Binding CollectionView}"/>
                </DataGrid.InputBindings>
            </DataGrid>

            <!--진료 완료-->
            <Label Content="진료 완료 리스트" Grid.ColumnSpan="3" Grid.Row="3" 
               FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
            <DataGrid x:Name="finGrid" Grid.ColumnSpan="3" Grid.Row="4" Background="#FFD2CFCF"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                  ItemsSource="{Binding Path=SampleData, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="환자 이름"/>
                    <DataGridTextColumn Header="진료 날짜"/>
                    <DataGridTextColumn Header="수납 요금"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</Page>
