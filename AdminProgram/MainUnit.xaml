<Window x:Class="AdminProgram.MainUnit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminProgram"
        mc:Ignorable="d"
        Background="{StaticResource background}"
        WindowStartupLocation="CenterScreen"
        Title="MainUnit" Height="800" Width="1200">
    <Grid>
        
        <Frame Source="/StartPage.xaml"/>
        
        <StackPanel x:Name="stpMenu" HorizontalAlignment="Left" Width="240" Margin="-200,0,0,0" Background="#FF26384B" MouseLeave="StpMenu_MouseLeave" MouseEnter="StpMenu_MouseEnter">
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label Width="200" Foreground="White">Menu #1</Label>
                <Image Width="30" Height="30" Source="/icon.ico" ></Image>
            </DockPanel>
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label Width="200" Foreground="White">Menu #1</Label>
                <Image Width="30" Height="30" Source="icon.ico" ></Image>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
