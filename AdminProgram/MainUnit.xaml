<Window x:Class="AdminProgram.MainUnit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminProgram"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        Title="MainUnit" Height="800" Width="1200"
        >
    <Grid>
        <Frame x:Name="frame" Source="/StartPage.xaml"
               NavigationUIVisibility="Hidden"/>
        <StackPanel x:Name="stpMenu" Background="{DynamicResource MaterialDesignDarkBackground}" HorizontalAlignment="Left" Width="240" Margin="-200,0,0,0" MouseLeave="StpMenu_MouseLeave" MouseEnter="StpMenu_MouseEnter">
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label x:Name="Home_Label" Width="200" Foreground="White"
                       PreviewMouseDown="Home_Label_PreviewMouseDown">Home</Label>
                <Image Width="30" Height="30" Source="/icon.ico" ></Image>
            </DockPanel>
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label x:Name="MediAppointment_Label" Width="200" 
                       PreviewMouseDown="MediAppointment_Label_PreviewMouseDown" Foreground="White">
                    대기 / 예약 관리
                </Label>
                <Image Width="30" Height="30" Source="icon.ico" ></Image>
            </DockPanel>
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label x:Name="Medi_Label" Width="200" 
                       PreviewMouseDown="Medi_Label_PreviewMouseDown" Foreground="White">
                    진료 내역 관리
                </Label>
                <Image Width="30" Height="30" Source="icon.ico" ></Image>
            </DockPanel>
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label x:Name="Patient_Label" Width="200" PreviewMouseDown="Patient_Label_PreviewMouseDown" Foreground="White">환자정보</Label>
                <Image Width="30" Height="30" Source="icon.ico" ></Image>
            </DockPanel>
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label x:Name="Staff_Label" Width="200" PreviewMouseDown="Staff_Label_PreviewMouseDown" Foreground="White">의료진정보</Label>
                <Image Width="30" Height="30" Source="icon.ico" ></Image>
            </DockPanel>
            <DockPanel HorizontalAlignment="Right" Margin="5">
                <Label x:Name="Disease_Management" Width="200" PreviewMouseDown="Disease_Management_PreviewMouseDown" Foreground="White">상병 / 시술관리</Label>
                <Image Width="30" Height="30" Source="icon.ico" ></Image>
            </DockPanel>
            <Label x:Name="Global_Name" Content="" HorizontalContentAlignment="Center" Foreground="White"></Label>
            <Button x:Name="Logout" Content="로그아웃" Height="27" Width="96"  HorizontalAlignment="Right" Margin="5" Cursor="Hand" Click="LogoutBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
