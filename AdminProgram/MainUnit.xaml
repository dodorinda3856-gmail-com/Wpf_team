<Window x:Class="AdminProgram.MainUnit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminProgram"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        Title="MainUnit" Height="800" Width="1400"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Column="1" x:Name="frame" Source="/StartPage.xaml"
               NavigationUIVisibility="Hidden"/>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" x:Name="stpMenu" Background="{DynamicResource MaterialDesignDarkBackground}" HorizontalAlignment="Left" Width="200">
                <DockPanel HorizontalAlignment="Right" Margin="10">
                    <Label x:Name="Home_Label" Width="150" FontSize="15" Foreground="White"
                       PreviewMouseDown="Home_Label_PreviewMouseDown">Home</Label>
                    <Image Width="30" Height="30" Source="/icon.ico" ></Image>
                </DockPanel>
                <DockPanel HorizontalAlignment="Right" Margin="10">
                    <Label x:Name="MediAppointment_Label" Width="150" FontSize="15"
                       PreviewMouseDown="MediAppointment_Label_PreviewMouseDown" Foreground="White">
                        대기 / 예약 관리
                    </Label>
                    <Image Width="30" Height="30" Source="icon.ico" ></Image>
                </DockPanel>
                <DockPanel HorizontalAlignment="Right" Margin="10">
                    <Label x:Name="Medi_Label" Width="150" FontSize="15"
                       PreviewMouseDown="Medi_Label_PreviewMouseDown" Foreground="White">
                        진료 내역 관리
                    </Label>
                    <Image Width="30" Height="30" Source="icon.ico" ></Image>
                </DockPanel>
                <DockPanel HorizontalAlignment="Right" Margin="10">
                    <Label x:Name="Patient_Label" Width="150" FontSize="15" PreviewMouseDown="Patient_Label_PreviewMouseDown" Foreground="White">환자정보</Label>
                    <Image Width="30" Height="30" Source="icon.ico" ></Image>
                </DockPanel>
                <DockPanel HorizontalAlignment="Right" Margin="10">
                    <Label x:Name="Staff_Label" Width="150" FontSize="15" PreviewMouseDown="Staff_Label_PreviewMouseDown" Foreground="White">의료진정보</Label>
                    <Image Width="30" Height="30" Source="icon.ico" ></Image>
                </DockPanel>
                <DockPanel HorizontalAlignment="Right" Margin="10">
                    <Label x:Name="Disease_Management" Width="150" FontSize="15" PreviewMouseDown="Disease_Management_PreviewMouseDown" Foreground="White">상병 / 시술관리</Label>
                    <Image Width="30" Height="30" Source="icon.ico" ></Image>
                </DockPanel>

            </StackPanel>
            <Grid Width="200" Background="{DynamicResource MaterialDesignDarkBackground}" Margin="0,291,0,53" Grid.RowSpan="3"/>
            <StackPanel Grid.Row="2" Background="{DynamicResource MaterialDesignDarkBackground}">
                <Label x:Name="Global_Name" Content="" FontSize="16" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="White"></Label>
                <Button x:Name="Logout" Content="로그아웃" Height="27" HorizontalAlignment="Center" Width="96" FontWeight="Bold" Margin="0,20,0,30" Cursor="Hand" Click="LogoutBtn_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
